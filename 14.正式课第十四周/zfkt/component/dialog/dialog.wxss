.dialog_box{
    position: fixed;
    width:100%;
    height:100%;
    overflow: hidden;
    top:0;
    left:0;
    z-index: 100;
}
.dialog_box .mask{
    position: absolute;
    width:100%;
    height:100%;
    overflow: hidden;
    top:0;
    left:0;
    background: rgba(0,0,0,0.5);
}
.dialog_box .content_box{
    position: absolute;
    width:90%;
    left:50%;
    top:40%;
    transform: translateY(-50%) translateX(-50%);
}