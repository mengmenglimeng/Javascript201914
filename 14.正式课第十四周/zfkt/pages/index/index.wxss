/**index.wxss**/
.img{
  width:100%;
  height:100%
}
.know_zf,.zf_thing,.public_class{
  text-align: center;
  padding:20rpx 10rpx;
}
.know_zf .til,.zf_thing .til,.public_class .til{
  font-size:60rpx;
  margin:20rpx;
  text-align: center;
}
.video_box{
  width:100%;
  position: relative;
}
.play_icon image{
   position: absolute;
   z-index:30;
   width:100rpx;
   height:100rpx;
   top:50%;
   left:50%;
   transform: translateX(-50%) translateY(-50%);
}
/* 公开课的样式 */
.list_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.list_box .list{
  width:50%;
  padding:10rpx;
  box-sizing: border-box;
}
.list_box .list image{
  width:100%;
  height:300rpx;
}
.list_box .list text{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  width:100%;
  display: inline-block;
}


