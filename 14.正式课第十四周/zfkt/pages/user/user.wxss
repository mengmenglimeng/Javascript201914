.item_box{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:20rpx;
}
.item_box .img_box{
    width:200rpx;
    height:200rpx;
    overflow: hidden;
}
.item_box .content_box{
    flex:1;
    padding-left:20rpx;
}
.item_box .content_box input{
    border:  1px solid #eee;
    width:200rpx;
    float:left;
}